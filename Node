public class Node {
    protected int key;
    protected Node left;
    protected Node right;
    protected int height;
    protected boolean color;
//criação do nó pai, dadas as dificuldades encontradas
    protected Node parent;


//Construtor BT, BTS, AVL e VP:
//true - vermelho
//false - preto
    public Node(int key) {
        this.key = key;
        this.left = null;
        this.right = null;
        this.height = 1;
        this.color = true;
        this.parent = null;
    }
}
